import 'package:flutter/material.dart';
import 'package:shared_preferences/shared_preferences.dart';
import 'dart:convert';

void main() {
  runApp(LoanApp());
}

class LoanApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Loan & Interest Management',
      theme: ThemeData(primarySwatch: Colors.blue),
      home: LoanHomePage(),
    );
  }
}

class LoanHomePage extends StatefulWidget {
  @override
  _LoanHomePageState createState() => _LoanHomePageState();
}

class _LoanHomePageState extends State<LoanHomePage> {
  final TextEditingController _principalController = TextEditingController();
  final TextEditingController _rateController = TextEditingController();
  final TextEditingController _timeController = TextEditingController();
  List<Map<String, dynamic>> _loans = [];

  @override
  void initState() {
    super.initState();
    _loadLoans();
  }

  // Load loans from local storage
  void _loadLoans() async {
    SharedPreferences prefs = await SharedPreferences.getInstance();
    String? loansString = prefs.getString('loans');
    if (loansString != null) {
      setState(() {
        _loans = List<Map<String, dynamic>>.from(json.decode(loansString));
      });
    }
  }

  // Save loans to local storage
  void _saveLoans() async {
    SharedPreferences prefs = await SharedPreferences.getInstance();
    prefs.setString('loans', json.encode(_loans));
  }

  // Calculate simple interest
  double _calculateInterest(double principal, double rate, double time) {
    return (principal * rate * time) / 100;
  }

  // Calculate EMI (simplified for equal monthly installments)
  double _calculateEMI(double principal, double rate, double time) {
    double monthlyRate = rate / (12 * 100);
    int months = (time * 12).toInt();
    return principal * monthlyRate * (1 + monthlyRate).pow(months) / ((1 + monthlyRate).pow(months) - 1);
  }

  // Add a new loan
  void _addLoan() {
    double principal = double.tryParse(_principalController.text) ?? 0;
    double rate = double.tryParse(_rateController.text) ?? 0;
    double time = double.tryParse(_timeController.text) ?? 0;

    if (principal > 0 && rate > 0 && time > 0) {
      double interest = _calculateInterest(principal, rate, time);
      double emi = _calculateEMI(principal, rate, time);
      double totalAmount = principal + interest;

      setState(() {
        _loans.add({
          'principal': principal,
          'rate': rate,
          'time': time,
          'interest': interest,
          'emi': emi,
          'total': totalAmount,
        });
      });
      _saveLoans();
      _clearFields();
    } else {
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(content: Text('Please enter valid numbers')),
      );
    }
  }

  void _clearFields() {
    _principalController.clear();
    _rateController.clear();
    _timeController.clear();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text('Loan & Interest Management')),
      body: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          children: [
            TextField(
              controller: _principalController,
              decoration: InputDecoration(labelText: 'Principal Amount'),
              keyboardType: TextInputType.number,
            ),
            TextField(
              controller: _rateController,
              decoration: InputDecoration(labelText: 'Interest Rate (%)'),
              keyboardType: TextInputType.number,
            ),
            TextField(
              controller: _timeController,
              decoration: InputDecoration(labelText: 'Time (Years)'),
              keyboardType: TextInputType.number,
            ),
            SizedBox(height: 20),
            ElevatedButton(
              onPressed: _addLoan,
              child: Text('Calculate & Add Loan'),
            ),
            SizedBox(height: 20),
            Expanded(
              child: ListView.builder(
                itemCount: _loans.length,
                itemBuilder: (context, index) {
                  var loan = _loans[index];
                  return Card(
                    child: ListTile(
                      title: Text('Principal: \$${loan['principal']}'),
                      subtitle: Text(
                        'Interest: \$${loan['interest'].toStringAsFixed(2)}\n'
                        'EMI: \$${loan['emi'].toStringAsFixed(2)}\n'
                        'Total: \$${loan['total'].toStringAsFixed(2)}',
                      ),
                    ),
                  );
                },
              ),
            ),
          ],
        ),
      ),
    );
  }
}
